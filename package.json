{
  "name": "markdown-preview-plus",
  "displayName": "Markdown Preview Plus",
  "description": "Show markmap in markdown preview",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./src/extension.js",

  "contributes": {
    "commands": [

    ],
    "markdown.previewScripts": [
      "./dist/markmap.js"
    ],
    "markdown.previewStyles": [
      "./node_modules/markmap-toolbar/dist/style.css"
    ],
    "markdown.markdownItPlugins": true
  },
  "icon": "image/icon.png",
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test",
    "build:script": "npx esbuild ./src/markmap.js --bundle --outfile=dist/markmap.js --format=iife --platform=browser"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "22.x",
    "@types/vscode": "^1.85.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.3.9",
    "esbuild": "^0.21.4",
    "eslint": "^8.57.0"
  },
  "repository": {
    "type": "github",
    "url": "https://github.com/yuna495/markdown-preview-plus.git"
  },
  "dependencies": {
    "d3-scale": "^4.0.2",
    "d3-selection": "^3.0.0",
    "markmap-lib": "^0.18.12",
    "markmap-toolbar": "^0.18.12",
    "markmap-view": "^0.18.12"
  },
  "license": "MIT"
}
