{
  "name": "markdown-preview-plus",
  "displayName": "Markdown Preview Plus",
  "description": "Show markmap, mermaid, graphviz in markdown preview",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "markdown",
    "mermaid",
    "markmap",
    "mindmap",
    "graphviz",
    "diagram",
    "preview"
  ],
  "publisher": "yuna495",
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [],
    "markdown.previewScripts": [
      "./dist/markmap.js",
      "./dist/mermaid.js",
      "./dist/graphviz.js"
    ],
    "markdown.previewStyles": [
      "./dist/markmap-toolbar.css",
      "./dist/style.css"
    ],
    "markdown.markdownItPlugins": true,
    "configuration": {
      "type": "object",
      "title": "Markdown Preview Plus",
      "properties": {
        "markdown-preview-plus.mermaidTheme": {
          "type": "string",
          "default": "pinklily",
          "enum": [
            "pinklily",
            "default",
            "neutral",
            "dark",
            "forest",
            "base"
          ],
          "description": "Select the theme for Mermaid diagrams. 'pinklily' uses the extension's custom CSS."
        }
      }
    }
  },
  "icon": "image/icon.png",
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test",
    "build:style": "copy node_modules\\markmap-toolbar\\dist\\style.css dist\\markmap-toolbar.css && copy src\\style.css dist\\style.css",
    "build:script": "npx esbuild ./src/markmap.js --bundle --outfile=dist/markmap.js --format=iife --platform=browser",
    "build:mermaid": "npx esbuild ./src/mermaid.js --bundle --outfile=dist/mermaid.js --format=iife --platform=browser",
    "build:graphviz": "npx esbuild ./src/graphviz.js --bundle --outfile=dist/graphviz.js --format=iife --platform=browser",
    "build": "npm run build:style && npm run build:script && npm run build:mermaid && npm run build:graphviz"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "22.x",
    "@types/vscode": "^1.85.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.3.9",
    "esbuild": "^0.21.4",
    "eslint": "^8.57.0",
    "viz.js": "^2.1.2",
    "d3-scale": "^4.0.2",
    "d3-selection": "^3.0.0",
    "d3-zoom": "^3.0.0",
    "markmap-lib": "^0.18.12",
    "markmap-toolbar": "^0.18.12",
    "markmap-view": "^0.18.12",
    "mermaid": "^11.12.2"
  },
  "repository": {
    "type": "github",
    "url": "https://github.com/yuna495/markdown-preview-plus.git"
  },
  "license": "MIT"
}
